{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Python Script on Save",
      "type": "shell",
      "command": "conda run -n thesis python -m parser",
      "options": {
        "cwd": "${workspaceFolder}/paraser"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
